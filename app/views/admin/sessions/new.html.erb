<div class="container background-color p-5 mb-5">
  <div class="row">
    <h3 class="p-5 mx-auto">管理者ログイン</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-12 col-md-2 offset-3 col-form-label" %><br /><!-- col-form-labelを適用するとフォームコントロールの中央に垂直に配置される -->
        <div class="col-md-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class:"col-12 col-md-2 offset-3 col-form-label" %><br />
        <div class="col-md-5">
         <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-10 col-md-5 mt-4 offset-5">
          <%= f.submit "ログイン", class: "btn btn-outline-primary nav-link text-dark btn-block" %>
        </div>
      </div>
    </form>
  <% end %>
</div>