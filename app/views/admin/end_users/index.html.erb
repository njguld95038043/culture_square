<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">会員一覧</span></h3>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th>ユーザーID</th>
            <th>ニックネーム</th>
            <th>性別</th>
            <th>年齢</th>
            <th>職業</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
            <tr>
              <td><%= end_user.id %></td>
              <td><u><%=link_to end_user.nick_name, admin_end_user_path(end_user.id), class: "text-dark" %></u></td>
              <td><%= end_user.gender_i18n %></td>
              <td><%= end_user.calc_age %>歳</td>
              <td><%= end_user.occupation %></td>
              <td><%= end_user.email %></td>
              <% if end_user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>