<div class="container background-color p-5">
  <div class="row">
    <h3 class="p-3">ログイン</h2>
  </div>
  <div class="row mb-3">
    <div class="col-3 offset-2">
      <h6><span class="header">会員の方はこちらからログイン</span></h6>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-2 offset-3 col-form-label" %><br />
        <div class="col-md-5">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class:"col-2 offset-3 col-form-label" %><br />
        <div class="col-md-5">
         <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-5 offset-5">
         <%= f.submit "ログイン", class: "btn btn-outline-primary nav-link text-dark btn-block" %>
        </div>
      </div>
  　</form>
  <% end %>
  <div class="row mt-5">
    <div class="col-3 offset-2">
      <h6><span class="header">会員登録がお済みでない方</span></h6>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-5 offset-3">
     <%= link_to 'こちら', new_end_user_registration_path, class: "btn btn-outline-success text-dark" %> から新規登録を行ってください。
    </div>
  </div>
</div>