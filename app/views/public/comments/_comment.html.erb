<% review.comments.each do |comment| %>
<table class="table table-hover">
  <tbody>
    <tr>
      <td class="col-1">
        <%= image_tag comment.end_user.get_profile_image(100,100) %>
      </td>
      <td class="col-2">
        <%= comment.end_user.nick_name %>
      </td>
      <td class="col-1">
        <%= comment.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td class="col-6">
        <%= comment.comment %>
      </td>
      <td class="col-2">
        <% if comment.end_user == current_end_user %>
          <%= link_to "削除", review_comment_path(comment.review, comment), method: :delete, remote:true, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>