<div class="container background-color p-5 mb-5">
  <div>
    <%= link_to "全削除", notification_path("all"), method: :delete, class:"btn btn-light fas fa-trash" %>
      <% if @notifications.exists? %>
        <% @notifications.each do |notification| %>
          <%= render 'public/notifications/notification', notification: notification %>
        <% end %>
      <% else %>
       <p>通知はありません</p>
      <% end %>
　</div>
</div>
