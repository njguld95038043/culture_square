<div class="container background-color notification-bottom p-5">
  <div>
    <h3 class="text-center">
      <strong>通知</strong>
      <span><%= link_to "全削除", notification_path("all"), method: :delete, class:"btn btn-light fas fa-trash" %></span>
    </h3>
    <% if @notifications.exists? %>
      <% @notifications.each do |notification| %>
        <%= render 'public/notifications/notification', notification: notification %>
      <% end %>
    <% else %>
     <p class="text-center p-5"><strong>通知はありません</strong></p>
    <% end %>
　</div>
</div>
