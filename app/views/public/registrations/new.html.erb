<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name", placeholder:"ミッキーマウス" %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :gender, [['男性',0], ['女性',1], ['その他',2]], include_blank: "性別を選択してください" %>
  </div>

  <div class="field">
    <%= f.label :職業 %><br />
    <%= f.select :occupation, [['会社員・会社役員'], ['自営業'], ['公務員'], ['学生'], ['フリーター'], ['無職'], ['その他'] ], include_blank: "職業を選択してください" %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %>
    <%= f.date_select :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1990, 1, 1) %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder:"aaa@gmail.com" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード再確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= link_to 'ログイン', new_end_user_session_path %>