<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'layouts/end_user_info', end_user: @end_user %>
    </div>
    <div class="col-9">
      <div class="row">
        <h2>レビュー詳細</h2>
        <div>
          <table>
            <thead>
              <tr>
                <td><%= link_to (image_tag(@review.book.large_image_url)), @review.book.item_url %></td>
                <td><%= @review.book.title %></td>
                <td><%= @review.book.author %></td>
                <td><%= @review.book.sales_date %></td>
              </tr>
            </thead>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
         ジャンル   <%= @review.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div>レビュー内容  <%= @review.review %></div>
          <div class="col-12">
            <%= link_to '編集画面へ進む', edit_review_path(@review), class: "btn btn-primary" %>
            <%= link_to '削除する', review_path(@review), method: :delete, class: "btn btn-danger" %>
            <% if @review.favorited_by?(current_end_user) %>
              <p>
                <%= link_to review_favorites_path(@review), method: :delete do %>
                  ♥<%= @review.favorites.count %>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to review_favorites_path(@review), method: :post do %>
                  ♡<%= @review.favorites.count %>
                <% end %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>