<div class="container">
  <div class="row">
    <div class="mx-auto">
    <%= form_with model: @review, url: reviews_path, method: :post, local: true do |f| %>
      <h2>書籍情報</h2>
      <div>
        <table>
          <tbody>
            <tr>
              <td><%= link_to (image_tag(@rakuten_book.large_image_url)), @rakuten_book.item_url %></td>
              <td>タイトル<%= @rakuten_book.title %></td>
              <td>著者<%= @rakuten_book.author %></td>
              <td>発売日<%= @rakuten_book.sales_date %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div>
        <h3>レビュー登録</h3>
        <div class="form-group row">
          <%= f.label :ジャンル, class:"col-sm-3 col-form-label" %><br />
          <div class="col-md-3">
           <%= f.collection_select :genre_id, Genre.where.not(name: '総合'), :id, :name, include_blank: "本のジャンルを選択してください" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :レビューや感想、勉強になったこと, class:"col-sm-3 col-form-label" %><br />
          <div class="col-md-3">
            <%= f.text_area :review, size:"60x5" %>
          </div>
        </div>
        <div>
          <%= f.submit '投稿する', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>