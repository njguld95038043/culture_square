<div class="container">
  <div class="row">
    <div class="mx-auto">
    <%= form_with model: @review, url: reviews_path, method: :post, local: true do |f| %>
      <h2>書籍情報</h2>
      <div>
        <table>
          <tbody>
            <tr>
              <td><%= link_to (image_tag(@book.large_image_url)), @book.item_url %></td>
              <td>タイトル<%= @book.title %></td>
              <td>著者<%= @book.author %></td>
              <td>発売日<%= @book.sales_date %></td>
              <%= f.hidden_field :item_url, :value => @book.item_url %>
              <%= f.hidden_field :title, :value => @book.title %>
              <%= f.hidden_field :author, :value => @book.author %>
              <%= f.hidden_field :isbn, :value => @book.isbn %>
              <%= f.hidden_field :sales_date, :value => @book.sales_date %>
              <%= f.hidden_field :item_price, :value => @book.item_price %>円
              <%= f.hidden_field :item_caption, :value => @book.item_caption %>
              <%= f.hidden_field :publisher_name, :value => @book.publisher_name %>
              <%= f.hidden_field :small_image_url, :value => @book.small_image_url %>
              <%= f.hidden_field :medium_image_url, :value => @book.medium_image_url %>
              <%= f.hidden_field :large_image_url, :value => @book.large_image_url %>
            </tr>
          </tbody>
        </table>
      </div>
      <div>
        <h3>レビュー登録</h3>
        <div class="form-group row">
          <%= f.label :ジャンル, class:"col-sm-3 col-form-label" %><br />
          <div class="col-md-3">
           <%= f.collection_select :genre_id, Genre.where.not(name: '総合'), :id, :name, include_blank: "本のジャンルを選択してください" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :レビューや感想、勉強になったこと, class:"col-sm-3 col-form-label" %><br />
          <div class="col-md-3">
            <%= f.text_area :review, size:"60x5" %>
          </div>
        </div>
        <div>
          <%= f.submit '投稿する', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>