<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "EndUser" %>
    <tbody>
      <% @end_users.each do |end_user| %>
        <tr>
          <td><%= end_user.nick_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Review" %>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.review %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>