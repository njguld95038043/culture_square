<% if current_end_user != end_user %>
  <% if current_end_user.following?(end_user) %>
    <%= link_to "フォローを外す", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローをする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>