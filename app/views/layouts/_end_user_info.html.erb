<div class="container">
  <div class="row">
    <h2>ユーザー情報</h2>
  </div>

  <div class="row mt-5">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th><%= image_tag end_user.get_profile_image(100,100) %></th>
        </tr>
        <tr>
          <th><%= end_user.nick_name %></th>
        </tr>
        <tr>
          <th><%= end_user.gender_i18n %></th>
        </tr>
        <tr>
          <th><%= end_user.calc_age %>歳</th>
        </tr>
        <tr>
          <th><%= end_user.occupation %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to end_user.followings.count, end_user_followings_path(end_user) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to end_user.followers.count, end_user_followers_path(end_user) %></th>
        </tr>
        <tr>
          <th><%= render 'public/end_users/relationship', end_user: end_user %></th>
        </tr>
      </tbody>
    </table>
  </div>
</div>