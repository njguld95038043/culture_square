<%= form_with url: rakuten_books_path, method: :get, local:true do |f| %>
  <%= f.text_field :keyword, autofocus: true, placeholder: "Search for books here to share your cultures ...", class: "form-control", size: 90 %>
  <%= f.submit 'Search', class: "btn btn-outline-primary text-dark mt-2" %>
<% end %>